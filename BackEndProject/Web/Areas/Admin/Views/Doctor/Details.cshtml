@using Core.Constants
@using Web.Areas.Admin.ViewModels.Doctor
@model DoctorDetailsVM

<div class="col-lg-12 grid-margin ">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Blog Details</h4>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Fullname</th>
                            <th>Specialty</th>
                            <th>Number</th>
                            <th>Email</th>
                            <th>Qualification</th>
                            <th>HomePAgeSee</th>
                            <th>mainPhoto</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>@Model.Id</td>
                            <td>@Model.FullName</td>
                            <td>@Model.Specialty</td>
                            <td>@Model.PhoneNumber</td>
                            <td>@Model.Email</td>
                            <td>@Html.Raw(Model.Qualification)</td>
                            <td>@Model.HomePageSee</td>


                            <td><img src="~/assets/img/@Model.MainPhotoName" /></td>
                        </tr>
                    </tbody>
                </table>

                <div> Skill; @Html.Raw(Model.Skill)</div>
                <div>Description: @Html.Raw(Model.Description)</div>
                <div>Facebook; @Model.FbUrl</div>
                <div>Twitter; @Model.TwUrl</div>
                <div>Linkedin; @Model.LiUrl</div>
                <a class="btn btn-danger" asp-action="index" asp-controller="doctor">Cancel</a>

            </div>
        </div>
    </div>
</div>
