@using Core.Entities
@using Web.Areas.Admin.ViewModels.HomeChooseComponent
@model HomeChooseComponentIndexVM

@if (Model.HomeChooseComponent==null)
{
    <a class="btn btn-primary" asp-action="create" asp-controller="homechoosecomponent">Create</a>
}

<table class="table table-dark">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Title</th>
            <th scope="col">Photo</th>
          @*  <th scope="col">Description</th>
            <th scope="col">Text</th>*@
            <th scope="col">Created at</th>
            <th scope="col">Modified at</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>

        @if (Model.HomeChooseComponent != null)
        {
            <tr>
                <td>@Model.HomeChooseComponent.Id</td>
                <td>@Model.HomeChooseComponent.Title</td>
                <td><img class="img-thumbnail" style="width:50px ; height:50px; object-fit:cover" src="~/assets/img/@Model.HomeChooseComponent.PhotoName" /></td>
              @*  <td>@Html.Raw(Model.HomeChooseComponent.Description)</td>
                <td>@Html.Raw(Model.HomeChooseComponent.Text)</td>*@
                
                <td>@Model.HomeChooseComponent.CreatedAt.ToShortDateString()</td>
                <td>@Model.HomeChooseComponent.ModifiedAt.ToShortDateString()</td>
                <td>
                    <a class="btn btn-primary" asp-action="update" asp-controller="homechoosecomponent" asp-route-id="@Model.HomeChooseComponent.Id">Update</a>
                    <form method="post" asp-action="delete" asp-controller="homechoosecomponent" asp-route-id="@Model.HomeChooseComponent.Id">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }

    </tbody>
</table>
