@using Core.Constants
@using Web.Areas.Admin.ViewModels.Price
@model PriceCreateVM

<form enctype="multipart/form-data" asp-action="create" asp-controller="price" method="post">

    <label asp-for="Title">Title</label>
    <input asp-for="Title" />
    <span asp-validation-for="Title"></span>
    <div class="form-group">
        <label asp-for="Description">Description</label>
        <textarea class="form-control" asp-for="Description"></textarea>
        <span asp-validation-for="Description"></span>
    </div>

    <div class="form-group">
        <label asp-for="Cost">Cost</label>
        <input class="form-control" asp-for="Cost">
        <span asp-validation-for="Cost"></span>
    </div>

    <div class="form-group">
        <label asp-for="Feature">Feature</label>
        <textarea class="form-control" asp-for="Feature"></textarea>
        <span asp-validation-for="Feature"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
    <a class="btn btn-danger" asp-action="index" asp-controller="price">Cancel</a>
</form>


@section Scripts{



    <script src="https://cdn.ckeditor.com/ckeditor5/35.2.1/classic/ckeditor.js"></script>
    <script>
        const properties = ["Description", "Feature"];

        properties.forEach(function myFunction(element) {

        ClassicEditor
            .create(document.querySelector(`#${element}`))
            .then(editor => {
                console.log(editor);
            })
            .catch(error => {
                console.error(error);
            });
        })

    </script>
}
