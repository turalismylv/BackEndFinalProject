@using Web.Areas.Admin.ViewModels.OurVision
@model OurVisionIndexVM

<a class="btn btn-primary" asp-action="create" asp-controller="ourvision">Create</a>
<table class="table table-dark">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Title</th>
            <th scope="col">Description</th>
            <th scope="col">CreateAt</th>
            <th scope="col">ModifiedAt</th>
            <th scope="col">Photo</th>
            <th scope="col">Actions</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var ourVision in Model.OurVisions)
        {
            <tr>
                <td>@ourVision.Id</td>
                <td>@ourVision.Title</td>
                <td>@Html.Raw(ourVision.Description)</td>
                <td>@ourVision.CreatedAt.ToShortDateString()</td>
                <td>@ourVision.ModifiedAt.ToShortDateString()</td>
                <td><img class="img-thumbnail" style="width:50px ; height:50px; object-fit:cover" src="~/assets/img/@ourVision.PhotoName" /></td>

                <td>
                    <a class="btn btn-primary" asp-action="update" asp-controller="ourvision" asp-route-id="@ourVision.Id">Update</a>
                    <form method="post" asp-action="delete" asp-controller="ourvision" asp-route-id="@ourVision.Id">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }

    </tbody>
</table>