@using Core.Constants
@using Web.Areas.Admin.ViewModels.AboutHome
@model AboutDetailsVM

<div class="col-lg-12 grid-margin ">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Blog Details</h4>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Title</th>
                            <th>Description</th>
                            <th>mainPhoto</th>

                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>@Model.Id</td>
                            <td>@Model.Title</td>
                            <td>@Html.Raw(Model.Description)</td>
                           <td><img  src="~/assets/img/@Model.MainPhotoPath" /></td>
                        </tr>
                    </tbody>
                </table>
               
            </div>
        </div>
    </div>
</div>

<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Photo</th>
                <th>Order</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var photo in Model.aboutHomePhotos)
            {
                <tr>
                    <td>@photo.Id</td>
                    <td><img class="img-thumbnail" style="width:50px ; height:50px; object-fit:cover" src="~/assets/img/@photo.Name" /></td>
                    <td>@photo.Order</td>
                </tr>
            }


        </tbody>
    </table>
     <a asp-action="index" asp-controller="about" class="btn btn-info">Cancel</a>
</div>

