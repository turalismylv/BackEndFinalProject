@using Core.Entities
@using Web.Areas.Admin.ViewModels.AboutHome
@model AboutIndexVM

@if (Model.AboutHome == null)
{
    <a class="btn btn-primary" asp-action="create" asp-controller="about">Create</a>
}

<table class="table table-dark">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Title</th>
            <th scope="col">Photo</th>
            <th scope="col">Description</th>
            <th scope="col">Created at</th>
            <th scope="col">Modified at</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>

        @if (Model.AboutHome != null)
        {
            <tr>
                <td>@Model.AboutHome.Id</td>
                <td>@Model.AboutHome.Title</td>
                <td><img class="img-thumbnail" style="width:50px ; height:50px; object-fit:cover" src="~/assets/img/@Model.AboutHome.MainPhoto" /></td>
                <td>@Model.AboutHome.Description</td>

                <td>@Model.AboutHome.CreatedAt.ToShortDateString()</td>
                <td>@Model.AboutHome.ModifiedAt.ToShortDateString()</td>
                <td>
                    <a class="btn btn-primary" asp-action="update" asp-controller="about" asp-route-id="@Model.AboutHome.Id">Update</a>
                    <form method="post" asp-action="delete" asp-controller="about" asp-route-id="@Model.AboutHome.Id">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                    <a class="btn btn-info" asp-action="details" asp-controller="about" asp-route-id="@Model.AboutHome.Id">Details</a>

                </td>
            </tr>
        }



    </tbody>
</table>
