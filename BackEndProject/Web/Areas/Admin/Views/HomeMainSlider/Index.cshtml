@using Web.Areas.Admin.ViewModels.HomeMainSlider
@model HomeMainSliderIndexVM

<a class="btn btn-primary" asp-action="create" asp-controller="homemainslider">Create</a>
<table class="table table-dark">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Title</th>
            <th scope="col">Description</th>
            <th scope="col">LearnUrl</th>
            <th scope="col">CreateAt</th>
            <th scope="col">ModifiedAt</th>
              <th scope="col">Photo</th>
              <th scope="col">Actions</th>
            
        </tr>
    </thead>
    <tbody>
        @foreach (var homeMainSlider in Model.HomeMainSliders)
        {
            <tr>
                <td>@homeMainSlider.Id</td>
                <td>@homeMainSlider.Title</td>
                 <td>@Html.Raw(homeMainSlider.Description)</td>
                  <td>@homeMainSlider.LearnUrl</td>
                   <td>@homeMainSlider.CreatedAt.ToShortDateString()</td>
                   <td>@homeMainSlider.ModifiedAt.ToShortDateString()</td>
                <td><img class="img-thumbnail" style="width:50px ; height:50px; object-fit:cover" src="~/assets/img/@homeMainSlider.PhotoName" /></td>
               
                <td>
                    <a class="btn btn-primary" asp-action="update" asp-controller="homemainslider" asp-route-id="@homeMainSlider.Id">Update</a>
                    <form method="post" asp-action="delete" asp-controller="homemainslider" asp-route-id="@homeMainSlider.Id">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }

    </tbody>
</table>
