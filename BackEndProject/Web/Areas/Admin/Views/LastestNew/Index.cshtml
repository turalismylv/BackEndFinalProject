@using Web.Areas.Admin.ViewModels.LastestNew
@model LastestNewIndexVM

<a class="btn btn-primary" asp-action="create" asp-controller="lastestnew">Create</a>
<table class="table table-dark">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Title</th>
            <th scope="col">Text</th>
            <th scope="col">Time</th>
            <th scope="col">CreateAt</th>
            <th scope="col">ModifiedAt</th>
              <th scope="col">Photo</th>
              <th scope="col">Actions</th>
            
        </tr>
    </thead>
    <tbody>
        @foreach (var lastestNew in Model.LastestNews)
        {
            <tr>
                <td>@lastestNew.Id</td>
                <td>@lastestNew.Title</td>
                 <td>@lastestNew.Text</td>
                 <td>@lastestNew.Time.ToShortDateString()</td>
                   <td>@lastestNew.CreatedAt.ToShortDateString()</td>
                   <td>@lastestNew.ModifiedAt.ToShortDateString()</td>
                <td><img class="img-thumbnail" style="width:50px ; height:50px; object-fit:cover" src="~/assets/img/@lastestNew.PhotoName" /></td>
               
                <td>
                    <a class="btn btn-primary" asp-action="update" asp-controller="lastestnew" asp-route-id="@lastestNew.Id">Update</a>
                    <form method="post" asp-action="delete" asp-controller="lastestnew" asp-route-id="@lastestNew.Id">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }

    </tbody>
</table>
